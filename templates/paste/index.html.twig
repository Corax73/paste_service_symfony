{% extends 'base.html.twig' %}

{% block title %}Hello PasteController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	{% block form %}
		<div class="example-wrapper">
			{{ form(form) }}
			</div>
		{% endblock %}
		{% block list %}
			{% if list|length > 0 %}
				<div class="example-wrapper">
					{% for item in list %}
						{{ item.title }},
					{% endfor %}
				</div>
			{% endif %}
		{% endblock %}
		{% if login != true %}
			{% block link %}
				<a href="{{ path('app_login') }}">Login</a>
			{% endblock %}
			{% block registration %}
				<a href="{{ path('app_register') }}">Registration</a>
			{% endblock %}
		{% else %}
			{% block logout %}
				<a href="{{ path('app_logout') }}">Logout</a>
			{% endblock %}
		{% endif %}
	{% endblock %}
